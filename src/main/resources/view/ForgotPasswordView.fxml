<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Hyperlink?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.layout.HBox?>
<?import org.kordamp.ikonli.javafx.FontIcon?>

<StackPane alignment="CENTER" prefHeight="800.0" prefWidth="520.0" styleClass="login-background" stylesheets="@../styles/styles.css" xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.saferoom.gui.controller.ForgotPasswordController">
    <children>
        <VBox fx:id="rootPane" alignment="CENTER" spacing="30.0" styleClass="login-pane">
            <children>
                <!-- Logo ve Başlık -->
                <VBox alignment="CENTER" spacing="15.0">
                    <children>
                        <FontIcon iconLiteral="fas-key" styleClass="logo-icon" iconSize="48" />
                        <Label styleClass="title-label" text="Reset Password" />
                        <Label styleClass="subtitle-label" text="Enter your email address and we'll send you a verification code to reset your password." textAlignment="CENTER" wrapText="true" maxWidth="350" />
                    </children>
                </VBox>

                <!-- Email Giriş Alanı -->
                <VBox spacing="15.0">
                    <children>
                        <Label styleClass="subtitle-label" text="Email Address" />
                        <TextField fx:id="emailField" promptText="Enter your email address" styleClass="input-field" />
                    </children>
                </VBox>

                <!-- Send Code Butonu -->
                <Button fx:id="sendCodeButton" mnemonicParsing="false" maxWidth="400" prefWidth="Infinity" styleClass="login-button" text="Send Verification Code" />

                <!-- Back to Login Linki -->
                <VBox alignment="CENTER" spacing="10.0">
                    <children>
                        <Hyperlink fx:id="backToLoginLink" styleClass="forgot-password" text="Back to Login" />
                    </children>
                    <VBox.margin>
                        <Insets top="10.0" />
                    </VBox.margin>
                </VBox>
            </children>
            <padding>
                <Insets bottom="40.0" left="40.0" right="40.0" top="40.0" />
            </padding>
        </VBox>
    </children>
</StackPane>